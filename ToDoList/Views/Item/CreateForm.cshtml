<h1>To Do List</h1>
<form action="/items" method="post">
  <label for="newitem">Add a new item</label>
  <input id="newitem" name="newitem" type="text" required>
  <!-- <label for="newdate">Add a due date!</label>
  <input id="newdate" name="newdate" type="text" required> -->
  <label for="category">Select a Category</label>
  <select class="selectCat" name="category">
    @foreach (var categories in Model)
    {
    <option value="@categories.GetId()">@categories.GetName()</option>
    }
  </select>
  <button type="submit">Submit</button>
</form>
<a href="/categories">View All Categories</a>
